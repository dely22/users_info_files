<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Show Users</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <div class="container">
        <table>        
            <thead>
                <tr>
                    <th>Full Name</th>
                    <th>User Name</th>
                    <th>Email</th>
                    <th>Avater</th>
                    <th>CV</th>
                </tr>
            </thead>
            <tbody>
                <% Users.forEach(element => { %>

                    <tr>
                        <td>
                            <%= element.FullName %>
                        </td>
                        <td>
                            <%= element.userName %>
                        </td>
                        <td>
                            <%= element.email %>
                        </td>
                        <td> <img src="/files/imgs/<%= element.image %>" style="width: 50px;" alt=""> </td>
                        <td>
                            <a href="<%= element.cv %>">
                                <%= element.cv %>
                            </a>
                        </td>
                    </tr>

                    <% });  %>
            </tbody>
            <tfoot>
                <tr >
                    <th colspan="6"></th><a href="index"style="width: 100%;font: size 1.5rem; text-align: center; text-decoration: none;" >LogOut </a>
                </tr>
            </tfoot>
        </table>
    </div>
</body>

</html>